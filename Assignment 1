package com;

class Book {
    private String title;
    private String author;
    private double price;
    private String isbn;
    private int stock;

    public Book(String title, String author, double price, String isbn, int stock) {
        this.title = title;
        this.author = author;
        this.price = price;
        this.isbn = isbn;
        this.stock = stock;
    }

    public void displayInfo() {
        System.out.println("Title: " + title);
        System.out.println("Author: " + author);
        System.out.println("Price: ₹" + String.format("%.2f", price));
        System.out.println("ISBN: " + isbn);
        System.out.println("Stock: " + stock + " copies\n");
    }

    public void applyDiscount(double percentage) {
        double discAmt = price * (percentage / 100);
        price = price - discAmt;
        System.out.println("Discount of " + percentage + "% applied. New price: ₹" + String.format("%.2f", price));
    }

    public void restock(int quantity) {
        stock = stock + quantity;
        System.out.println("Restocked " + quantity + " copies. New stock: " + stock);
    }

    public boolean isAvailable() {
        return stock > 0;
    }

    public String getTitle() {
        return title;
    }
}

public class Project {
    public static void main(String[] args) {
        Book novel = new Book("The Midnight Library", "Matt Haig", 499.00, "9781786892737", 10);
        Book textbook = new Book("Introduction to Algorithms", "Cormen et al.", 1299.00, "9780262033848", 5);

        novel.displayInfo();
        textbook.displayInfo();

        novel.applyDiscount(20);
        textbook.applyDiscount(10);

        novel.restock(5);
        textbook.restock(10);

        System.out.println(novel.getTitle() + " available for purchase: " + novel.isAvailable());
        System.out.println(textbook.getTitle() + " available for purchase: " + textbook.isAvailable());
    }
}
